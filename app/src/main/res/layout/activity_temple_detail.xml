<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4C77B"
    tools:context=".TempleDetailsActivity">

    <LinearLayout style="@style/detailActivityLinearLayoutStyle">

        <ImageView
            android:id="@+id/templeImage"
            style="@style/detailImageStyle" />

        <TextView
            android:id="@+id/templeName"
            style="@style/detailNameStyle"
            android:text="@string/temple_name" />

        <TextView
            android:id="@+id/templeLocation"
            style="@style/detailLocationStyle"
            android:text="@string/temple_location" />

        <TextView
            android:id="@+id/aboutTemple"
            style="@style/detailAboutStyle"
            android:text="@string/temple_location" />
    </LinearLayout>
</ScrollView>
